<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".tp">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/searchlayout"
            android:orientation="horizontal" >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search Image Here"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextbg"
                android:textSize="15sp"
                android:id="@+id/edittext"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_search_24"
                android:id="@+id/search"
                android:layout_marginLeft="-50dp"
                android:background="@android:color/transparent"
                app:tint="@color/white" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/searchlayout"
            android:id="@+id/bottomlayout"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/nature"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradientnature"
                        android:gravity="end"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:text="Nature"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/nature" >

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/animals"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp" >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradientbus"
                        android:gravity="end"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:text="Animals"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"

                        android:src="@drawable/animals2">

                    </ImageView>

                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/car"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradientcar"
                        android:gravity="end"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:text="Vehicals"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/car" >

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/space"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradienttrain"
                        android:gravity="end"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:text="Space"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/stars2"
                        >

                    </ImageView>

                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/trending"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradienttrending"
                        android:gravity="end"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:text="Trending"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/trending" >

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/bus2"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradientbus"
                        android:gravity="end"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:text="Bus"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/bus" >

                    </ImageView>

                </androidx.cardview.widget.CardView>





            </LinearLayout>




        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bottomlayout"
            android:layout_marginTop="255dp"
            android:padding="2dp">


        </androidx.recyclerview.widget.RecyclerView>



    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"

        />







</RelativeLayout>